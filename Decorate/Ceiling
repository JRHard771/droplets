ACTOR CeilDripper
{
	Radius 1
	Height 1
	+THRUACTORS
	+NOTONAUTOMAP
	+SPAWNCEILING
	+NOGRAVITY
	DistanceCheck cl_drop1_dist
	scale 0.5
	States
	{
	Spawn:
		TNT1 A 0 NoDelay A_Warp(AAPTR_DEFAULT,0,0,ceilingz - z - 1)
		TNT1 A 0 A_QueueCorpse
		SPLT F 0 A_Jump(128, 2)
		SPLT G 0
		"####" "#" 0 A_SetAngle(frandom(0.0,359.9))
		"####" "#" 1 A_SetScale(1.1,1)
		"####" "#" 1 A_SetScale(2.2,1)
		"####" "#" 1 A_SetScale(3.3,1)
		"####" "#" 1 A_SetScale(4.4,1)
		"####" "#" 1 A_SetScale(frandom(5.0,6.0),1)
		goto Drippy
	Drippy:
		"####" "######" 1 A_Warp(AAPTR_DEFAULT,0,0,ceilingz - z - 1)
		"####" "#" 0 A_Jump(254, "Drippy")
		"####" "#" 0 A_SpawnItemEx("CeilingDrop2", 0, 0, 4, 0, 0, 0, 0, SXF_TRANSFERTRANSLATION)
		goto Drippy
	}
}

ACTOR CeilDrip2 : CeilDripper
{
	scale 0.33
	DistanceCheck cl_drop2_dist
	States
	{
	Spawn:
		TNT1 A 0 NoDelay A_Warp(AAPTR_DEFAULT,0,0,ceilingz - z - 1)
		TNT1 A 0 A_QueueCorpse
		SPLT F 0 A_Jump(128, 2)
		SPLT G 0
		"####" "#" 0 A_SetAngle(frandom(0.0,359.9))
		"####" "#" 1 A_SetScale(0.6,1)
		"####" "#" 1 A_SetScale(1.2,1)
		"####" "#" 1 A_SetScale(1.8,1)
		"####" "#" 1 A_SetScale(2.4,1)
		"####" "#" 1 A_SetScale(frandom(3.0,4.0),1)
		goto Drippy
	Drippy:
		"####" "#########" 1 A_Warp(AAPTR_DEFAULT,0,0,ceilingz - z - 1)
		"####" "#" 0 A_Jump(254, "Drippy")
		"####" "#" 0 A_SpawnItemEx("CeilingDrop3", 0, 0, 4, 0, 0, 0, 0, SXF_TRANSFERTRANSLATION)
		goto Drippy
	}
}

